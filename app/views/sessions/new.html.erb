<h1>Log In</h1>
<%= form_for :login, type: "form" do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, autofocus: true, class: "form-control", type: "email" %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control", type: "password" %>
  </div>
  <div>
    <%= f.submit "Log In", type: "submit", class: "btn btn-primary" %>
  </div>
<% end %>